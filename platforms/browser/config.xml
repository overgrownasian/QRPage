<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ushiolabs.qrllauncher" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>QRL Launcher</name>
    <description>
        Scans a barcode and then inserts its value into a URL
    </description>
    <author email="branden@ushiolabs.com" href="http://ushiolabs.com">
        Ushio Labs
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="orientation" value="portrait" />
</widget>
